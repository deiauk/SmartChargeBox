<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:documentation="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/comment_edit_text"
        android:padding="20dp"
        android:gravity="left|start"
        android:inputType="text|textMultiLine|textCapSentences"
        android:hint="Jūsų komentaras"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_comment"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <Button
            android:textSize="16sp"
            android:id="@+id/cancel"
            android:textColor="#2e9df2"
            android:background="@drawable/invisible_buttons"
            android:text="Atšaukti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="16sp"
            android:id="@+id/send_comment"
            android:textColor="#2e9df2"
            android:background="@drawable/invisible_buttons"
            android:text="Siųsti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
        
</LinearLayout>